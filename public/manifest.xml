<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
           xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.0"
           xsi:type="MailApp">
  
  <!-- Basic Settings -->
  <Id>e2c1ece2-2146-43d2-86b6-95392bbe9f08</Id>
  <Version>1.0.4.0</Version>
  <ProviderName>Simtech</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="Simtech Email Signature"/>
  <Description DefaultValue="Insert Simtech signature into emails"/>
  <IconUrl DefaultValue="https://sim-email-signature.vercel.app/icon.png"/>
  <HighResolutionIconUrl DefaultValue="https://sim-email-signature.vercel.app/icon.png"/>
  <SupportUrl DefaultValue="https://sim-email-signature.vercel.app/"/>
  
  <!-- Hosts -->
  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>
  
  <!-- Requirements -->
  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.1"/>
    </Sets>
  </Requirements>
  
  <!-- Form Settings -->
  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://sim-email-signature.vercel.app/taskpane.html"/>
        <RequestedHeight>250</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>
  
  <!-- Permissions -->
  <Permissions>ReadWriteItem</Permissions>
  
  <!-- Rules -->
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Edit"/>
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read"/>
  </Rule>
  
  <!-- Version Overrides -->
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
    <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides/1.1" xsi:type="VersionOverridesV1_1">
      
      <Requirements>
        <bt:Sets DefaultMinVersion="1.10">
          <bt:Set Name="Mailbox"/>
        </bt:Sets>
      </Requirements>
      
      <Hosts>
        <Host xsi:type="MailHost">
          
          <Runtimes>
            <Runtime resid="Commands.Url">
              <Override type="javascript" resid="Commands.Url"/>
            </Runtime>
          </Runtimes>

          <DesktopFormFactor>
            <FunctionFile resid="Commands.Url"/>
            
            <ExtensionPoint xsi:type="MessageComposeCommandSurface">
              <OfficeTab id="TabDefault">
                <Group id="msgComposeGroup">
                  <Label resid="GroupLabel"/>
                  
                  <Control xsi:type="Button" id="msgComposeInsertSignature">
                    <Label resid="InsertButton.Label"/>
                    <Supertip>
                      <Title resid="InsertButton.Label"/>
                      <Description resid="InsertButton.Tooltip"/>
                    </Supertip>
                    <Icon>
                      <bt:Image size="16" resid="Icon.16x16"/>
                      <bt:Image size="32" resid="Icon.32x32"/>
                      <bt:Image size="80" resid="Icon.80x80"/>
                    </Icon>
                    <Action xsi:type="ExecuteFunction">
                      <FunctionName>insertSignature</FunctionName>
                    </Action>
                  </Control>
                  
                </Group>
              </OfficeTab>
            </ExtensionPoint>

            <ExtensionPoint xsi:type="LaunchEvent">
              <LaunchEvents>
                <LaunchEvent Type="OnNewMessageCompose" FunctionName="autoInsertSignature"/>
              </LaunchEvents>
              <SourceLocation resid="Commands.Url"/>
            </ExtensionPoint>
            
          </DesktopFormFactor>
        </Host>
      </Hosts>
      
      <Resources>
        <bt:Images>
          <bt:Image id="Icon.16x16" DefaultValue="https://sim-email-signature.vercel.app/icon.png"/>
          <bt:Image id="Icon.32x32" DefaultValue="https://sim-email-signature.vercel.app/icon.png"/>
          <bt:Image id="Icon.80x80" DefaultValue="https://sim-email-signature.vercel.app/icon.png"/>
        </bt:Images>
        <bt:Urls>
          <bt:Url id="Commands.Url" DefaultValue="https://sim-email-signature.vercel.app/commands.html"/>
          <bt:Url id="Taskpane.Url" DefaultValue="https://sim-email-signature.vercel.app/taskpane.html"/>
        </bt:Urls>
        <bt:ShortStrings>
          <bt:String id="GroupLabel" DefaultValue="Simtech"/>
          <bt:String id="InsertButton.Label" DefaultValue="Insert simtech"/>
        </bt:ShortStrings>
        <bt:LongStrings>
          <bt:String id="InsertButton.Tooltip" DefaultValue="Insert Simtech email signature"/>
        </bt:LongStrings>
      </Resources>
      
    </VersionOverrides>
  </VersionOverrides>
  
</OfficeApp>
